{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",                         // ⬅️ agrega esto
    "paths": {
      "@/*": ["./*"]                        // ⬅️ y esto para usar '@/components/...'
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "LEGADO/ChecklistCompleto"],
  "exclude": ["node_modules"]
}

